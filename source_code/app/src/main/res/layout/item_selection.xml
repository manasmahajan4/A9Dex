<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:id="@+id/sel_border"
        android:background="@color/bblack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:id="@+id/sel_back"
            android:padding="4dp"
            android:background="@color/bblack">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/check_selected"
                android:layout_width="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:buttonTint="@color/check_selected" />

            <TextView
                android:id="@+id/check_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/raj_font"
                android:lines="2"
                android:text="Lancer Evolution"
                android:gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/nav_triangle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:tint="@color/black"
            android:layout_margin="2dp"
            android:src="@drawable/side_triangle" />
    </RelativeLayout>

</LinearLayout>